<section id="portfolio">
<div class= "container">
<h1>Add Post</h1>
<%= form_for :post, html: { multipart: true } ,url: posts_path do |f| %>
	<p>
		<%= f.label :image %><br>
		<%= f.file_field :image, :required => true %>
	</p>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, :required => true%>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body, :required => true%>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
</div>
</section>