<section id="portfolio">
<div class= "container">
<div class="row">
  <div class="col-lg-12 text-center">
    <h2>Tiles</h2>
    <hr class="star-primary">
  </div>
</div>

<% a = 1 %>
<% @posts.each do |post| %>

<% if a % 4 == 0 %>
<div class="row tiles">
  <% end %>

  <div class="col-md-3 portfolio-item" align="center">
    <div class="caption tilename">
     <h3><%=post.title %></h3>
   </div>
   <div class="tileimg">
    <%= link_to post_path(id: post) do %>
    <%= image_tag post.image.url %>
    <% end %>
  </div>
  <div class="descript">
    <p><%= post.body %></p>
  </div>
</div>

<% if a % 4 == 0 %>
</div>
<% end %>

<% a = a+1 %>

<% end %>
</div>
</section>
